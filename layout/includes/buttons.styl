.common-btn-style
    font-weight 600
    padding 10px 20px

.blue-btn
    background-color blue
    color white;
    border-radius 20px;
    border none
    @extends .common-btn-style
    &:hover
        background-color dark-blue
        color @color

.fp-btn
  padding 5px 0
  color white
  border 0
  border-radius 2px

  &.fp-btn-primary
    background-color $btn-color
    min-width 200px
  &.fp-btn-default
    color thick-blue
    font-weight 600
    border 1px solid @thick-blue
    // @extends .common-btn-style
    padding 6px 25px
  

   
