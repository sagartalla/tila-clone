.common-btn-style
    font-weight 600
    padding 10px 20px

.blue-btn
    background-color blue
    color white;
    border-radius 20px;
    border none
    @extends .common-btn-style
    &:hover
        background-color dark-blue
        color @color

.border-blue-btn
    @extends .common-btn-style
    color thick-blue
    border-radius 2px
    border 1px solid @color

   
