.box
  background-color white
  box-shadow 0 0 12px 0 rgba(0,0,0,0.1)
  border-radius 4px
  border 1px solid light-gray
  padding 16px
  &.box-space
    padding px-10
    margin-bottom px-14

.middle
  top 50%
  transform translateY(-50%)

.center
  left 50%
  transform translateX(-50%)

.center.middle
  position absolute
  transform translate3d(-50%, -50%, 0)

.link-text
  color link-text
  cursor pointer

.flex
  display flex

.flex-wrp
  flex-wrap wrap
/* font families */

.ff-b
  font-family ProximaNova-Bold

.ff-sb
  font-family ProximaNova-SBold

.ff-l
  font-family ProximaNova-Light

.ff-t
  font-family ProximaNova-Thin

/* font families end */


.text-center
  text-align center

.error-msg
  color #f00

.float-r
  float right

.float-l
  float left

.clear-l
  clear left 

.clear-r
  clear right 

.clear-b
  clear both

.fp-btn
  padding 5px 0
  color white
  border 0
  border-radius 4px

  &.fp-btn-primary
    background-color $btn-color
    min-width 200px
  &.fp-btn-default
    background-color transparent
    color black
    border 1px solid black
    padding 5px 25px

//commom color font size and font weight
.color-size-weight
  color-fontsize-fontW(black,14px,600)

// text wrap
.ellips
  white-space: nowrap;
  overflow: hidden;
  o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  float: left;

.flx-space-bw
  @extends .flex
  justify-content space-between
  
.flx-spacebw-alignc
  @extends .flx-space-bw
  align-items center


