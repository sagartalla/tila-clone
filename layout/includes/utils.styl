  background-color white
  box-shadow 0 0 12px 0 rgba(0,0,0,0.1)
  border-radius 4px
  // padding 16px
  &.box-space
    padding px-10
    margin-bottom px-14

.middle
  top 50%
  transform translateY(-50%)

.center
  left 50%
  transform translateX(-50%)

.center.middle
  position absolute
  transform translate3d(-50%, -50%, 0)

.link-text
  color link-text
  cursor pointer

.flex
  display flex

.flex-wrp
  flex-wrap wrap

.justify-center
  justify-content center

.align-center
  align-items center
