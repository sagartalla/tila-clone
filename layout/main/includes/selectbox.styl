@import '../executables.styl';
.select
  position relative
  width 100%
  &:after
    position absolute
    top 12px
    right 0
    width 0
    height 0
    padding 0
    content ''
    border-left 6px solid transparent
    border-right 6px solid transparent
    border-top 6px solid rgba(0, 0, 0, 0.12)
    pointer-events none


  .select-text 
    position relative
    font-family inherit
    background-color transparent
    width 100%
    padding 5px 10px 5px 0
    border-radius 0
    border none
    border-bottom 1px solid light-border
    appearance none
    -webkit-appearance none
    &:focus
      outline none
      border-bottom 1px solid light-border
    &:after
      position absolute
      top 18px
      right 10px
      width 0
      height 0
      padding 0
      content ''
      border-left 6px solid transparent
      border-right 6px solid transparent
      border-top 6px solid rgba(0, 0, 0, 0.12)
      pointer-events none

  .select-label
    color rgba(0,0,0, 0.26)
    position absolute
    pointer-events none
    left 0
    top 10px
    transition 0.2s ease all
    font-weight 300

  .select-bar
    position relative
    display block
    width 100%
    
  .select-highlight
    position absolute
    height 60%
    width 100px
    top 25%
    left 0
    pointer-events none
    opacity 0.5

.select-text:focus ~ .select-label, .select-text:valid ~ .select-label {
	color navy-blue
	top -10px
	transition 0.2s ease all
	font-size 12px
}

.select-bar:before, .select-bar:after {
	content ''
	height 1px
	width 0
	bottom 0
	position absolute
	background navy-blue
	transition 0.2s ease all
}

.select-bar:before {
	left 50%
}

.select-bar:after {
	right 50%
}
/* active state */
.select-text:focus ~ .select-bar:before, .select-text:focus ~ .select-bar:after {
	width 50%
}