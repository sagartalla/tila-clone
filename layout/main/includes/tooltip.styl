.tool-tip
  position absolute
  background white
  z-index 50
  // border 1px solid #ccc
  border-radius 4px
  box-shadow: 0 0 8px 0 rgba(0,0,0,0.1);
  width 250px
  padding 5px
  top 30px
  &:before
    content ''
    background-color: #fff;
    height: 15px;
    width: 15px;
    position: absolute;
    left: 47%;
    top: -6px;
    transform: rotate(45deg);
    // border: 1px solid #a4b4c1;
    // border-bottom: 0;
    // border-right: 0;
    // border-left: 1px solid #d4dee5;
    // border-top: 1px solid #d4dee5;
    box-shadow 0 -6px 10px -6px rgba(74, 144, 226, 0.08)
  ul 
    padding 0
    margin 0
    li
      padding 5px 10px
