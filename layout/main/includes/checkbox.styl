/**
    Custom Checkbox

    USAGE:

    <div className={styles['checkbox-material']}>
      <input id="your-id" type="checkbox" /> 
      <label for="your-id"> your label </label>
    </div>
**/
@import '../executables.styl';

.checkbox-material {
  position: relative;
  display flex
  // margin: 20px 0;
  // text-align: left;

  label {
    cursor: pointer;
    &:before, &:after {
      content: "";
      position: absolute;
      left:0;
      top: 0;
    }
    
    &:before {
      width-height-radius(16px, 16px, 2px)
      background white
      border 1px solid light-border
      cursor pointer
      transition background .3s
    }
  }
  
  input[type="checkbox"] {
    outline 0
    margin-right 10px
    visibility hidden

    &:checked {
      + label:before{
        background navy-blue
        border none
      }
      + label:after {
        transform rotate(-45deg)
        top 3px
        left 3px
        width 11px
        height 6px
        border 2px solid white
        border-top-style none
        border-right-style none
      } 
    }
  }
}