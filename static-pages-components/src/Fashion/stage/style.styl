
.fashion-main-part
  .fashion-banner-main
    width 100%
    height 370px
    img
      width 100%
      object-fit cover
    .banner-label
      right 14%
      top 20%
      width 20%
      .main-quation
        font-family Lobster
      .banner-dec
        text-shadow 0 1px 0 rgba(238, 238, 238, 0.73)
        color #939393

  .banner-sub-slider
    .banner-sub-slider-inn
      border solid 1px #ececec
      .banner-sub-slider-inn-img
        width 100%
        height 180px

  .what-new-part
    .what-title

    .chinos-part, .new-brands
      .chinos-part-inn
        padding 6px 10px
        .disc
          font-size 13px

  .top-brand-part
    .top-brand-part-inn
      min-height 100%
      padding 20px 10px
      .adidas-logo
        height 85px
      .top-brand-list
        line-height 2.5
        ul li
          border-bottom: 1px solid #e2e2e2;
      .canvali-logo
        height 85px
        img
          height 70px

      .dg-logo
        height 85px
        img
          height 65px
      .guc-logo
        height 85px
        img
          height 35px

  .border
    border: 1px solid black;
    width: 20%;
    z-index: -9;

  .price-point
    .price-point-inn
      border: solid 6px #eeeeee

  .getting-ready-part
    .chinos-part-inn
      padding 6px 10px
      .what-title
        .border
          width 30%

  .styled-for-part
    .border
      width 40%


.shop-now-btn
  a
    border solid 1px #939393
    display inline-flex
    padding 6px 15px
    color #939393


.img-responsive
  max-width 100%
  max-height 100%

.lobster-family
  font-family Lobster
