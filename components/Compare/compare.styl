@import '../../layout/main/executables.styl';

.compare-dtls
  background white
  position relative
  padding 20px
  
.compare-selct
  height 36px
  border-radius 120px
  border 1px solid light-brdr
  font-size 12px
  padding 10px
.compare-background 
  border-radius 10px
  box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.13)
  .cart-btn
    border-bottom-right-radius 16px
    width 75%
    height 40px
    margin-top 5px
    border 1px solid tila-blk
    i
     width 14px
     height 14px
     margin-right 7px
  .added-btn
    background-color white
    border-bottom-right-radius 16px
    color navy-blue
    border 1px solid navy-blue
    width 55%
    height 40px
    margin-top 5px
    i
     width 14px
     height 14px
     margin-right 7px
    .cart-list
      height 20px
      width 20px
      margin-right 5px
  .close-item
    position absolute
    top 6px
    right 10px
    font-size 20px
.add-icon
    width 50px
    height 50px
.featureTitle
  padding 0px 10px
  border-left 3px solid electronics-color

 .parentBackground:nth-child(even) .childBackground
    background-color: rgba(235,235,235, 0.5);
    margin-right 5px

  .parentBackground:nth-child(odd) .childBackground
    background-color white
    margin-right 5px

 .parentBackground
    word-break break-all
    align-items stretch
