@import '../../layout/main/executables.styl';
  
.header-container 
  display block
  padding-top 10px
  margin-bottom 10px
  background-color #fff
  box-shadow 0 0 12px 0 rgba(0,0,0,.1)

.search-wrapper
  position relative
  .search-input
    height 45px
    width 100%
    background #eee
    border-radius 25px
    outline none
    padding 10px 20px
    font-size 16px
    border none
    &[contenteditable=true]
      color #ccc
      white-space: nowrap;
      overflow: hidden;
      &:empty:before
        content attr(placeholder)
        display block /* For Firefox */
    br
      display:none;
    *
      display:inline;
      white-space:nowrap;

  .search-btn
    position absolute
    right 14px
    top 10px
    .searching-icon
      position absolute
      right -14px
      width 45px
      top -11px

.actionbar-wrapper
  .action-item 
    width 46px
    height 46px
    border-radius 50%
    float left
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.1);
    margin 0 5px
    position relative
    cursor pointer
    border 1px solid generic-gray-color
  
.login-reg-modal
  width 760px
  height 550px

.megamenu-wrapper
  overflow hidden

.megamenu-dropdown
  width 100%
  background #fff
  position absolute
  left 0
  z-index 1

nav 
  ul
    padding 0
    li
      float left
      margin 10px
      list-style none
      a
        color inherit 
        font-weight 500

.action-item
  .wish-list-icon
  .cam-icon
    width 24px
    height 18px

  .cart-icon
    width 22px
    height 24px