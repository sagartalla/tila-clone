@import '../../layout/main/executables.styl';

.header-container
  display: block;
  box-shadow: 0 0 12px 0 rgba(0,0,0,0.1);
  position: fixed;
  top: 0;
  z-index: 99;
  background: #fff;
  width 100%
  .header-container-inn
    background-color white
    width 100%
    &.faded
      background-color rgba(255,255,255, 0.95)
    .header-inn-wrap
      height 60px

  .header-megamenu
    box-shadow 0 3px 4px 0 rgba(0, 0, 0, 0.09)
    position relative
    // z-index 99
    .header-megamenu-inn
      box-shadow 0 1px 1px 0 rgba(0, 0, 0, 0.09)
      left 0
      right 0
      top 0
      bottom 0
      background-size cover
      z-index 1
      background-color rgba(247, 245, 245, 0.8)
      filter blur(3px)
    .header-meganenu-sub
      position relative
      z-index 43
      background-color tila-blk
      color white
      .submenu-head-wrap
        background: #4a4a4a;
        .submenu-head
          margin-left 55px
          overflow: hidden;
          margin-bottom: 0;
          color: #fff;
          .level-sub-item:hover
            color #fff
          li
            cursor pointer
            height 40px
            &:hover
              border-bottom 5px solid #fff
              box-sizing border-box
              color #fff

.profile-part

  .ple-icon
    padding: 10px 24px;
    border-bottom: 1px solid #efeff4
    .profile-name
      display flex
      flex-direction column
    .hello-text-clr
      color label-light
    .user-name
      max-width 130px
      text-overflow ellipsis
      overflow hidden
      white-space nowrap
      float left
    .icon
      width 40px
      height 40px
      background-color thck-gry-clr
      border-radius 40px
  .profile-inn
    line-height 3
    background-color rgba(187, 210, 241, 0.09)
    li
      border-bottom: 1px solid #efeff4
      border-left 2px solid transparent
      &:hover
        background-color white
        font-weight bold
        border-left 2px solid tila-blk
      a span
        color #000
    .profile-icon
      width 16px
      height 30px
    .support
      span
        width: 20px
        height: 20px
        border-radius: 20px
        border: solid 0.8px #2c2f33

.search-wrapper
  position relative
  .search-input
    height 40px
    width 100%
    // background #eee
    border-radius 4px
    outline none
    padding 10px 20px
    font-size 16px
    border 1px solid border-gray
    // background light-gray-color
    &[contenteditable=true]
      color #ccc
      white-space nowrap
      overflow hidden
      &:empty:before
        content attr(placeholder)
        display block /* For Firefox */
    br
      display:none
    *
      display:inline
      white-space:nowrap

  .search-btn-img
    position absolute
    right 4px
    width 30px
    height: 30px;
    top 7px
    display flex
    align-items center
    justify-content center
    .searching-icon
      width 23px
      height 23px
      cursor pointer

  .search-btn
    position absolute
    right 4px
    width 30px
    height: 30px;
    top 4px
    // border-radius 4px
    display flex
    align-items center
    justify-content center
    border 0
    bottom 4px
    background-color transparent
    .searching-icon
      position absolute
      // right 0
      width 16px
      height 16px
      // top 0
  .r-40
    right 40px
.actionbar-wrapper
  display flex
  justify-content flex-end
  .action-item
    float left
    position relative
    > span
      padding 0 15px
      border-right 1px solid border-gray

    .cart-count
      right -12px
      top -8px
      background generic-green-color 
      border-radius 50%
      width 18px
      height 18px
      border 1px solid white
    
  .cart-inn
    // border-right: 1px solid #e5e5e5;
    .cart-item
      padding: 0;
      box-shadow: 0 0 7px 1px rgba(0,0,0,0.07);
      border: 0;
      width: 340px;
      top: 38px;
      margin: 0;
      &:before
        content ''
        background-color: white;
        height: 15px;
        width: 15px;
        position: absolute;
        top: -7px;
        transform: rotate(45deg);
        border: 1px solid border-gray;
        border-bottom: 0;
        border-right: 0;
        border-left: 1px solid border-gray;
        border-top: 1px solid border-gray;

    &:hover .cart-item
      display block

  .account-inn
    .account-item
      padding: 0;
      box-shadow: 0 0 7px 1px rgba(0,0,0,0.07);
      border: 0;
      width: 230px;
      top: 39px;
      margin: 0;
      &:before
        content ''
        background-color: white;
        height: 15px;
        width: 15px;
        position: absolute;
        top: -8px;
        transform: rotate(45deg);
        border: 1px solid border-gray;
        border-bottom: 0;
        border-right: 0;
        border-left: 1px solid border-gray;
        border-top: 1px solid border-gray;

    &:hover .account-item
      display block

    .logout-icon, .login-icon
      width 16px
      height 34px
  .wishlist-inn
    .wishlist-item
      padding: 0;
      box-shadow: 0 0 7px 1px rgba(0,0,0,0.07);
      border: 0;
      width: 340px;
      top: 38px;
      margin: 0;     
      &:before
        content ''
        background-color: white;
        height: 15px;
        width: 15px;
        position: absolute;
        top: -7px;
        transform: rotate(45deg);
        border: 1px solid border-gray;
        border-bottom: 0;
        border-right: 0;
        border-left: 1px solid border-gray;
        border-top: 1px solid border-gray;

    &:hover .wishlist-item
      display block

    .profile-edit
      position absolute
      top 25px
      z-index 9
      border-radius 2px
      box-shadow 0 2px 4px 0 rgba(0,0,0,0.11)
      border solid 0.3px lht-bdr
      &:before
        content ''
        position absolute
        width 0
        height 0
        border-left 9px solid transparent
        border-right 9px solid transparent
        border-bottom 12px solid white
        top -10px
.round-shape
    border-radius: 50%;
    border: 1px solid #dddddd;
    width: 30px;
    height: 30px;
  
  .profile-icon-main
    .profile-icon
      width 16px
      height 20px

  .country-code
    position relative
    img
      width 20px

    .main-toggle-part
      box-shadow 0 2px 4px 0 rgba(0,0,0,0.11)
      top 25px
      z-index 8
      img
        height 15px

.main-search-drp
  top 50px
  border-radius 2px
  padding 10px 0
  &:before
    content ''
    background-color #fff
    height 15px
    width 15px
    position absolute
    left 18px
    top -5px
    transform: rotate(135deg);
    box-shadow: -3px 3px 5px 0 rgba(166, 159, 159, 0.1)

.login-reg-modal
  width 50%
  max-height 620px
  padding 10px
  background-color login-bg-gray

.megamenu-wrapper ul li a:hover
  color white

.megamenu-wrapper
  overflow hidden
  &.electronics
    .active-menu-item
      border-bottom: 4px solid electronics-color
    ul li
      &:hover
        border-bottom: 4px solid electronics-color
  &.fashion
    .active-menu-item
      border-bottom: 4px solid fashion-color
    ul li
      &:hover
        border-bottom: 4px solid fashion-color
  &.home-living, &.lifestyle
    .active-menu-item
      border-bottom: 4px solid lifestyle-color
    ul li
      &:hover
        border-bottom: 4px solid lifestyle-color
  ul li
    border-bottom: 4px solid transparent
    margin 0 5px
    padding 10px
    cursor pointer
    border-top 4px solid transparent
    &:hover
      div a
        font-weight 600
        text-decoration: none;
    &:active, &:focus
      text-decoration: none;
      color inherit
  .electronics-item.active-menu-item
    border-bottom: 4px solid electronics-color
  .fashion-item.active-menu-item
    border-bottom: 4px solid fashion-color
  .home-living-item.active-menu-item, .lifestyle-item.active-menu-item
    border-bottom: 4px solid lifestyle-color

.megamenu-event-wrapper
  overflow hidden
  position absolute
  left 0
  width 100%
  background #fff
  box-shadow 0 2px 4px 0 rgba(0,0,0,0.11)

.megamenu-dropdown
  z-index 1
  display flex
  &.max-height
    max-height 410px
    overflow hidden
  &.electronics
    .megamenu-sub-drop-down
      >.megamenu-sub-list
        >span a
          color electronics-color
  &.fashion
  .megamenu-sub-drop-down
    >.megamenu-sub-list
      >span a
        color fashion-color
  &.home-living, &.lifestyle
    .megamenu-sub-drop-down
      >.megamenu-sub-list
        >span a
          color lifestyle-color
  .megamenu-sub-drop-down
    display flex
    flex-wrap wrap
    align-content flex-start
    width 79%
    flex-direction column
    >.megamenu-sub-list
      width 26%
      float left
      height 185px
      >span a
        font-size 16px
      .megamenu-sub-child-list
        line-height 1.5
        font-size 12px
        a
          color light-gray-clr
  .top-brands-trending-wrap
    width 20%
    .top-brands-wrap
      // height 260px
      width 100%
      .megamenu-sub-list
        width 100%
        .megamenu-sub-child-list
          padding-left 0
          img
            width 75px
            height 25px
  .view-all-menu
    position absolute
    bottom 5px
    right 40px
    cursor pointer


nav
  ul
    padding 0
    li
      float left
      margin 10px
      list-style none
      a
        color inherit
        font-weight 500

.action-item
  .wish-list-icon
  .cam-icon
    width 17px
    height 16px

  .cart-icon
    width 16px
    height 20px


.logos-part
  .default-logo
    width 74px
    height 34px

.megamenu-icon
  width 20px
  height 20px
  position relative
  svg
    width 100%
    height 100%

.country-dd, .language-dd
  button
    border 0
  .item
    width 50px
    min-width auto
    &>li>a
      padding 3px 15px

.mini-cart
  height: auto;

.search-suggestion
  display flex
  a
    line-height 2
    width 100%
    display flex
    &:hover
      color black
    &:focus
      outline none

.overlap {
    position: absolute;
    padding: 9px 21px;
    font-size: 16px;
    color: light-gray-clr;
    opacity: 0.6;
    z-index: 9999;
    cursor: text;
}
@media screen and (min-device-width: 320px) and (max-device-width: 736px) and (orientation : portrait){
  .login-reg-modal {
    width 88%
  }
}

@media screen and (min-device-width: 768px) and (max-device-width: 1024px) and (orientation : portrait){
  .megamenu-sub-drop-down .top-brands-trending-wrap .megamenu-sub-child-list {
    padding-left 0
  }

  .megamenu-event-wrapper {
    .megamenu-dropdown {
      overflow scroll

      .megamenu-sub-list {
        width 33%

        .megamenu-icon {
          margin-right 5px
          left auto
        }
      }
    }
    .megamenu-event-container {
      width 100%
      padding 0
    }
  }
}
