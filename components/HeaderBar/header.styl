.header-container {
  display block
  padding-top 10px
  margin-bottom 10px
  background-color #fff
  box-shadow 0 0 12px 0 rgba(0,0,0,.1)
}
.search-wrapper
  position relative
  .search-input
    height 50px
    width 100%
    background #eee
    border-radius 25px
    outline none
    padding 10px 20px
    font-size 20px
    border none
    &[contenteditable=true]
      color #ccc
      white-space: nowrap;
      overflow: hidden;
      &:empty:before
        content attr(placeholder)
        display block /* For Firefox */
    br
      display:none;
    *
      display:inline;
      white-space:nowrap;

  .search-btn
    position: absolute;
    right: 0;
    top: 0;
    background: #bbb;
    display: block;
    height: 50px;
    border-radius: 25px;
    padding: 11px 15px;
    font-size: 20px;
    cursor: pointer;

.actionbar-wrapper
  .action-item 
    width 50px
    height 50px
    border-radius 50%
    display inline-block
    box-shadow 0 0 3px 1px
    margin 0 5px

nav 
  ul
    padding 0
    li
      float left
      margin 10px
      list-style none