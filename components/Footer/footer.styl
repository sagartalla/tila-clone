@import '../../layout/main/executables.styl';

.footer-container
  .footer-suport-part
    background-color background-color
    border solid 1px footer-bdr
    width 24%
    .quation-bar
      .quation-bar-inn
        width 34px
        height 34px

  .footer-social-icons
    .social-icons
      width 30px
      height 30px

  .footer-download-app
    .download-icons, img
      width 128px
      height 38px

  .footer-social-main
    background-color drak-gray-clr
    a
      color rgba(0,0,0,0.54)

  .footer-social-main, .footer-suport-title, .footer-menu-items ul, .footer-download-app
    color rgba(0, 0, 0, 0.54)

  .footer-container-inn, .footer-menu-items, .footer-social-main
    border-bottom solid 0.5px rgba(151, 151, 151, 0.25)

  .footer-container-inn
    border-top solid 0.5px rgba(151, 151, 151, 0.25)

  .footer-container-inn
    background url(/static/img/bg-img/footer-bg.png) repeat
    background-size: contain;

  .footer-menu-items
    .footer-menu-list
      align-items: center;
      justify-content: space-between;
      width: 95%;
      margin-left: auto;
      margin-right: auto;
    .footer-menu-inn
      align-items center

    a
      color rgba(0,0,0,0.54)
    .footer-list-icon
      width 20px
      height 20px

    .top-brands
      .brand-icon
        width 75px
        height 25px

  .footer-social-list-main
    .footer-sc-img
      width 100%
      height 100%

    .footer-social-title
      width 21px
      height 21px

    .footer-social-list-main-inn
      border-right 2px solid thck-gry-clr

    .footer-sc-logo
      width 31px
      height 31px

    .footer-time
      color border-gry-color

    .sc-part
      border-bottom 2px solid footer-bdr

      &:last-child
        border-bottom 0

    .follow-fb-btn, .follow-inst-btn, .follow-twi-btn, .follow-sc-btn
      border-radius 20px

    .follow-fb-btn
      background facebook-color

    .follow-inst-btn
      background black

    .follow-twi-btn
      background twitter-color

    .follow-sc-btn
      background snapchat-yellow-color

.img-responsive
  max-width 100%
  max-height 100%

.black, .black:hover, .black:active
  color black
