@import '../../../layout/main/executables.styl';

.sidebar-container
  width 100%
  height auto
  background-color white
  box-shadow 0 0 5px 0 rgba(0, 0, 0, 0.06), 0 5px 5px 0 rgba(0, 0, 0, 0.05)

 .user-profile
   width 100%
   border-bottom 1px dotted base-font
   border-left 5px solid blue
   background lgt-blue
  .profile-pic
    display inline-block
   .img-style
    height 50px
    width 50px
    background-color label-light-grey
    border-radius 50%
    margin 0 auto
  .profile-details
    display inline-block

 .list-container
   width 100%
   height auto
   border-bottom 1px dashed light-gray-color
   color base-font
  .list-items
    width 68%;
    display inline-block
  .list-item-left
    display inline-block
    width 26px
    height 18px
  .list-common
    width 10%
    font-size 12px
    color light-gray-clr
    border 1px solid light-gray-clr
    border-radius 4px
    height 20px
    margin: 0 10px
    .count-container
      border-radius: 4px;
