 .list-container
   width 100%
   height auto
   border-bottom 1px solid cam-border-gray
   color navy-blue
  .list-items
    width 80%;
    display inline-block
  .list-item-left
    display inline-block
    width 30px
    height 20px
  .list-common
    width 10%
    font-size 12px
    color navy-blue
    border 1px solid cam-border-gray
    border-radius 4px
    height 20px
