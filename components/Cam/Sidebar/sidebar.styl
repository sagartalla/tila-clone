.sidebar-container
 width 100%
 height auto
 border 1px solid #5555

 .user-profile
  width 100%
  height 50px
  border-bottom-style dotted
  border-bottom-width 1px
  border-bottom-color #5555
  border-left 5px solid #4267b2
  padding 5px
  background #d9e0ef
  .profile-pic
    width 50%
    display inline-block
   .img-style
    height 30px
    width 30px
    background-color #bbb
    border-radius 50%
    margin 0 auto
  .profile-details
   width 50%
   display inline-block

 .list-container
   width 100%
   height auto
   border-width 1px
   border-bottom-style dotted
   border-color #5555
  .list-items-container
   padding 10px
  .list-items
   width 60%;
   font-size 12px
   display inline-block
  .list-common
   width 20%
   display inline-block
   font-size 12px