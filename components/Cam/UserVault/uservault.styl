@import '../../../layout/main/executables.styl';

.vault-container
  .valut-card-main
    left 0
    right 0
    box-shadow 0px 8px 6px 2px rgba(0,0,0,0.12)
    max-height: 200px;
    overflow: scroll;
    .valut-card-main-inn
      border-bottom 1px dashed border-light-gray

  .flex-wrap
    flex-wrap wrap

  .vault-card-header
    border-bottom 1px solid light-gray-color
    .cards-vocher
      width-height-radius(95px, 75px, 0)
      .card-items-list
        .active
          border-bottom 4px solid yellow-color
          font-weight 600
    .tila-credit-wrap
      border: 1px dotted;
      padding: 10px 20px;
      position: absolute;
      right: 40px;
      border-radius: 6px;
      .label
        display block
      .amount-wrap
        display flex
        .currency
          display block
          color #8a8a8f
        .amount
          display block
          line-height 1
  .vault-card-item
    background-color light-card-green
    color label-light
    position relative
    .vault-card
      width-height-radius(40px, 20px, 4px)
    .vault-card-delete-icon
      position: absolute;
      background-color white
      width-height-radius(20px, 20px, 50%)
      right 15px
      i
        width-height-radius(14px, 14px, 0)
  .make-default
    position: absolute;
    bottom: -10px;
    right: 0;
    background: white;
    padding-left: 10px;
    border-radius: 10px 0 0;
    label
      margin-bottom 3px

  .vault-card-item-new
    cursor pointer
    background-color white
    .pls-icon
      width-height-radius(15px, 15px, 0)

  .active-card
    background-color thick-card-green
    color black
    box-shadow 0 2px 4px 0 rgba(0,0,0,0.11)
    .make-default
      box-shadow 0 2px 4px 0 rgba(0,0,0,0.11)

  .vault-add-card-new
    .credit-debit-card-details
      border-top 1px dashed rgba(151, 151, 151, 0.2)

    .card-list-items
      padding-left 20%
      .bg-card
        width-height-radius(45px, 25px, 4px)

    .fp-add-new-card
      padding 10px 20%
