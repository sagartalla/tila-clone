@import './uservault.styl';

.vault-container
  .vault-card-header
    .tila-credit-wrap
      border 1px dotted
      padding 10px 20px
      border-radius 6px
      background-color #f9f9f9
      color black
      border-bottom-right-radius 0
      border-top-right-radius 0
    .tila-redeemable-wrap
       border 1px dotted
       padding 10px 20px
       border-radius 6px
       background-color #f9f9f9
       color black
       border-bottom-left-radius 0
       border-top-left-radius 0
       border-left 0
       border-bottom 2px solid generic-green-color !important
  .vault-card-delete-icon
    right 15px
  .make-default
    padding-left 10px