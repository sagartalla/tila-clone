@import '../../../layout/main/executables.styl';

.wishlist
  img
    height 120px
    object-fit scale-down
    width 100%
  .no-wishlist-icon-inn
    height 100%
    justify-content center
    align-items center
    padding-top 8%
    flex-direction column
    .deleno-wish-list-icon
      width 150px
      height 140px
  .cart-wishlist-popup
    position fixed
    left 0
    right 0
    bottom 0
    background white
    padding 20px 0
    z-index 2
    box-shadow 13px 20px 60px #aaaaaa5c;
    width 100%

    .cart-wishlist-title
      cursor pointer
      overflow hidden
      text-overflow ellipsis
      display -webkit-box
      line-height 16px
      max-height 32px
      -webkit-line-clamp 2
      padding 0 7px
      min-height 32px


    .cart-wishlist-popup-title
      position relative
      padding-bottom 30px
      .title-label
        z-index 9
        padding 0 20px
      .title-border 
        position absolute
        border 1px solid black
        width 25%


    .item
      border 1px solid light-gray-color
      width 150px !important
      margin-right 20px
      min-height 285px
      &:focus
        outline none

      .wish-pop-img
        height 150px

        img
          width 100%
          height 100%
          object-fit scale-down

      .add-cart-btn
        padding 10px 0
        visibility hidden

      &:hover
        box-shadow 0 3px 9px 0 rgba(0, 0, 0, 0.07)
        
        .add-cart-btn
          visibility visible
 .mini-wishlist     
    .wishlist-container
      max-height 330px
      overflow auto
      padding 20px 20px 0 20px
    .wishlist-container-img
      width: 100%;
      height: 50px;
      img
        max-width 100%
        max-height 100%
        object-fit scale-down
    .move-to-cart-btn
      padding 6px 14px !important
      border-bottom-left-radius 10px         
    .delete-icon
      width 14px
      height 14px
     .card-details-name
      width 70%
    .go-to-wishlist
      border-bottom-left-radius 14px
      height 40px
    .wishlist-background
      background-color gray-light
.delete-icon-part
  display flex
  justify-content center
  width-height-radius(32px, 32px, 50%)
  float right
  align-items center
  right 0
  top -12px
  background-color light-gray-color
  cursor pointer

  .delete-icon
    width 12px

.alert-icon
  margin-right 5px
  width 12px

@media screen and (min-device-width: 360px) and (max-device-width: 730px) and (orientation : portrait){

  .wishlist {
    padding-left 0

    .mb-wishlist-part {
      padding 20px 15px

      .mb-wishlist-part-img {
        width 100%
        height 80px

        img {
          max-width 100%
          max-height 100%
          object-fit contain
          height auto
        }
      }
      
      .price-details h4 {
        width 100%
        text-align right
      }
    }
  }

  .wishlist .add-to-btn {
    padding 6px 15px
  }

  .m-p-0 {
    padding 0
  }

  .m-m-0 {
    margin 0
  }

  .m-fs-18 {
    font-size 18px
  }

  .m-fs-14 {
    font-size 14px
  }

  .m-t-0 {
    margin-top 0
  }

  .m-fs-12 {
    font-size 12px
  }
}

.wishlist-result 
   height 400px
  
.loader-div
    width 50px
    height 50px
    z-index 14
  .loader-styl
    svg
      animation rotate 1.4s linear infinite
      -webkit-animation rotate 1.4s linear infinite;
      -moz-animation rotate 1.4s linear infinite;
      @keyframes rotate {
        to {
          transform rotate(360deg);
        }
      }

      @-webkit-keyframes rotate {
        to {
          -webkit-transform rotate(360deg);
        }
      }

      @-moz-keyframes rotate {
        to {
          transform rotate(360deg);
        }
      }
