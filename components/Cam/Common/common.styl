.input
 border none
 border-bottom: 1px dotted #5555;
 box-shadow none
 border-radius 0
 padding-left 0
 margin-bottom 10px
 width 100%
 height 32px
 outline: none 

.image-block-style
  height 100px
  border 1px solid #555555 

.switch
  position relative
  display inline-block
  width 45px
  height 20px
  margin 0
//  input
//    display none
 .slider
  position absolute
  cursor pointer
  top 0
  left 0
  right 0
  bottom 0
  background-color #ccc
  transition .4s
  border-radius 25px
  &:before
   position absolute
   content ""
   height 15px
   width 14px
   left 4px
   bottom 3px
   background-color white
   transition .4s
   border-radius 50%  
 input:checked + .slider 
   background-color #2196F3
 input:focus + .slider 
   box-shadow 0 0 1px #2196F3
 input:checked + .slider:before 
  transform translateX(26px)

    

