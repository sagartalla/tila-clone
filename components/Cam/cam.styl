@import '../../layout/main/main.styl';
@import '/static/vendor/css/rc-calendar.css';

.cam-container
  .bg-color
    background-color #ddd; 
    
.editProfileModal
  .image-block-style
    height 100px
    border 1px solid #555555 

  .dp-flex
    display flex

  .dp-flex>div
    flex: 1

  .gender-select>img
    border 1px solid link-highlight  

  .gender-select>span
    color link-highlight 

  .gender-unselect>img
    border-width 0px  

  .gender-unselect>span
    color base-font  

.modalContainer
  height 100%
  width 100%
  top 0
  left 0
  .disabled
    height 100%
    width 100%
    position fixed
    top 0
    left 0
    z-index 2000
    background-color grey
    opacity 0.8
  .modal
    height 100%
    width 40%
    position fixed
    top 0
    right 0
    z-index 2001
    background-color white

.showDiv
  display block

.hideDiv
  display none

  

