
@import '../../../layout/main/executables.styl';


.button-styl
   background-color #45689a
   color #fff
   height 40px
   display: flex;
   justify-content: center;
   align-items: center;
   border: 1px solid #45689a;
   padding: 7px
   
.button-hoverstyl
    color #fff
    height 40px
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px solid #45689a;
    padding: 7px

 .loader-div
          width 20px
          height 20px
          .loader-styl
            svg
              animation rotate 1.4s linear infinite;
              -webkit-animation rotate 1.4s linear infinite;
              -moz-animation rotate 1.4s linear infinite;
              @keyframes rotate {
                to {
                  transform rotate(360deg);
                }
              }

              @-webkit-keyframes rotate {
                to {
                  -webkit-transform rotate(360deg);
                }
              }

              @-moz-keyframes rotate {
                to {
                  transform rotate(360deg);
                }
              }

.image-icon 
      width  18px
      height 18px
      margin-right 7px
