@import '../../../layout/main/executables.styl';

.auto-suggestions-wrap
    position: relative;
    .auto-suggestions-list
      position: absolute;
      z-index: 999;
      left: 0%;
      top: 100%;
      height: 200px;
      overflow: auto;
      overflow-x: hidden;
  input[type=text]
    background transparent
  .auto-suggestions
    z-index 1
    cursor pointer
    box-shadow 0 2px 4px 0 rgba(0,0,0,0.11)
    line-height 2.5
    width 200px
    .item
      display block
      border-bottom 0.5px solid border-gray
  .delete-btn
    width 25px
    height 25px
    border-radius 50%
    background #ccc
    text-align center
    padding 2px
    position absolute
    top 0
    right -5px
    cursor pointer
    display none
  &:hover
      .delete-btn
        display block

.delivery-part
  .map-icon
    width 10px
    height 15px
.delivery-input
  border-bottom 0 !important

@media screen and (min-device-width: 320px) and (max-device-width: 767px) and (orientation : portrait) {
  .auto-suggestions-wrap {
    width 90%;
  }
  
}
