@import '../../../layout/main/executables.styl';

.auto-suggestions-wrap
    position: relative;
    .auto-suggestions-list
      position absolute
      z-index 999
      left 0%
      top 100%
      max-height 200px
      overflow auto
      overflow-x hidden
      box-shadow 0 0 5px rgba(0,0,0,0.1)
      transition all 0.5s ease-in
      background white

  input[type=text]
    background transparent
  .auto-suggestions
    z-index 1
    cursor pointer
    line-height 2.5
    width 200px
    .item
      display block
      border-bottom 0.5px solid border-gray
.delivery-part
  .map-icon
    width 10px
    height 15px
.delivery-input
  width 80%
  max-width initial
  white-space nowrap
  overflow hidden
  o-text-overflow ellipsis
  text-overflow ellipsis
  display inline-flex
  border-bottom 0 !important

@media screen and (min-device-width: 320px) and (max-device-width: 767px) and (orientation : portrait) {
  .auto-suggestions-wrap {
    width 90%;
  }

}
