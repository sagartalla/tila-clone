@import '../../../layout/main/executables.styl';

.slider {
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0,0,0,0.5);
    z-index: 999;
}

.sliderInner {
    border: 1px solid #fff;
    border-radius: 6px;
    z-index: 9999;
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.5);
    top: 50%;
    left: 83%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    width: 500px;
    max-width: 500px;
    overflow: auto;
    height: 100vh;
}

.cross {
    top: 10px;
    left: 25px;
    z-index:1000;
}
