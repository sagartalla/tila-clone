  float left
  width 17%
  margin 17px
  // border 1px solid #e5e5e5
  box-shadow 0 2px 7px 0 rgba(0,0,0,0,0.3)
  position sticky
  height 100vh
  padding: 15px
.panel-group .panel
  margin-bottom 0
  border-radius 4px
.panel
  box-shadow none
.panel-default
