@import '../../../layout/main/executables.styl'

.filter-panel
  float left
  width 17%
  margin-right 20px
  border 1px solid #e5e5e5
  box-shadow 0 2px 7px 0 rgba(0,0,0,0,0.3)
  position sticky
  height 500px
.panel-group .panel
  margin-bottom 0
  border-radius 4px
.panel
  box-shadow none
.panel-default
  border 0
.search-results
  float left
  width calc(82% - 20px)
.search-results .items-list-show
  align-items flex-end
.flx-space-bw
  justify-content space-between
.flx
  display flex
.bg-white
  background-color #fff
.border-radius4
  border-radius 4px
.flex-center
  align-items center
.grid-cont
  position relative
  border 1px solid #e5e5e5
  box-shadow 0 2px 7px 0 rgba(0,0,0,0.03)
  background-color #fff
  border-radius 10px
.flex-wrp
  flex-wrap wrap
.suggested-tags .text-row
  height:2em!important
  width 25%!important
  margin-right 1.5em!important
  margin-top 0!important
.result-box .text-row
  height 2em!important
.display-item-wrap
  height: calc(100% - 65px)
