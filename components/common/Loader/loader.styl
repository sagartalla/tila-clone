  height 2em!important
.input-wrapper
  background-color #E0E0E0
.productPlaceHolder
  margin-right 6%
.couponHeader
  width 95%
  border-radius 4px
  border 1px solid #f7f5f5
  padding-left 12px
  margin-bottom 5px
  background #f7f5f5
  height 12em
  &:empty
    background-image:linear-gradient( 100deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.5) 50%, rgba(255, 255, 255, 0) 80% ), linear-gradient( 100deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.5) 50%, rgba(255, 255, 255, 0) 80% ),linear-gradient( #f7f5f5 100px, transparent 0 ),linear-gradient( #f7f5f5 100px, transparent 0 ),linear-gradient( #f7f5f5 100px, transparent 0 ),linear-gradient( #f7f5f5 100px, transparent 0 );
    // background-image: radial-gradient(circle 50px at 50px 50px, #d3d3d3 99%, transparent 0), linear-gradient(100deg, rgba(255,255,255,0), rgba(255,255,255,0.5) 50%, rgba(255,255,255,0) 80%), linear-gradient(#d3d3d3 20px, transparent 0), linear-gradient(#d3d3d3 20px, transparent 0), linear-gradient(#d3d3d3 20px, transparent 0), linear-gradient(#d3d3d3 20px, transparent 0);
    height: 1.5em
    background-repeat: repeat-y;
    background-size: 100px 200px, 50px 200px, 150px 200px, 350px 200px, 300px 200px, 250px 200px;
    background-position: 0 0, 0 0, 120px 0, 120px 40px, 120px 80px, 120px 120px;
    animation shine 1s infinite


@keyframes shine {
  to {
    background-position:
      0 0,
      100% 0, /* move highlight to right */
      120px 0,
      120px 40px,
      120px 80px,
      120px 120px;
  }
}