@import '../../../layout/main/executables.styl';

.errors-main-inn
    background url(/static/img/errors-img/404bg.png) no-repeat top left
    height 350px
    background-size cover

    .erros-inn-img
        display flex
        align-items center
        justify-content center
        height 420px
        img 
            max-width 100%
            max-height 100%
            object-fit scale-down

    .errors-label
        height 120px
        display flex
        align-items center
        justify-content center
        img 
            max-width 100%
            max-height 100%
            object-fit scale-down 
    
    .label-not
        display: flex
        justify-content: center
        padding-top: 15px
        font-size: 24px
