@import '../../../layout/main/executables.styl';

  .ff-t-i
    text-align center
    .e, .h-a-l
      width calc(50% - 6px)
      display inline-block
      padding 17px 35px
      border-radius 2px
      box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.04);
      background-color white
      .title
        font-family ProximaNova-SBold
        color #101820
        margin-bottom 17px
        display block
        text-align left
    .item
      width 100px
      margin 0 auto
      .slider-elips
        width 100%
        white-space nowrap
        overflow hidden
        o-text-overflow ellipsis
        text-overflow ellipsis
        float left
        display inline-block
      img
        width 87px
        height 87px
        margin 0 auto
.l-item
  box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.04)
  background-color #ffffff
  border-bottom-right-radius 14px

.l-img-container
  height 230px

.l-img
  max-height 100%
  max-width 100%
  object-fit contain
  margin 0 auto
  width 100%
  height 100%
.l-title
  &:after
    position absolute
    right 0
    width 1em
    height 1.9em
    margin-top 0.2em
    background #fff
  &:before
    content '...'
    position absolute
    right 0
    bottom -5px

.img-icon
  width 20px
  height 20px