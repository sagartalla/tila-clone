@import '../../layout/main/executables.styl';

.image-placeholder
  width 100%
  height 100%
  .img-responsive
    height 100%
    width 100%

.reset-part
  .reset-icon
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: 438px;
    height: 208px;

.text-center
  text-align: center;

.forgot-password
  margin-left: 20px;
  margin-right: 20px;
  text-align: justify;
  min-height: 355px;
  
  .radio-buttons
   min-height: 150px;
  .border
    border: 1px solid #f2f2f2
  .reset-link
    background-color: light-card-green;
    padding: 10px;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
  .reset-link-mobile
    background-color: light-card-green;
    padding: 10px;
  .inputOTP
    border: none;
    border-bottom: 1px solid;
    width: 40px;
    outline: none;
    text-align: center;
  .email-success-icon
    width: 73px;
    height: 69px;
  .bg-light-gray
    color: dark-gray;
  .invalid-email
    background-color: #ffdacc;
    border: 1px solid thick-red-arrow;
    padding: 10px;
    font-size: large;
.passwordeye
  cursor pointer
  display flex
  position absolute
  top 13px
  font-size 9px
  color #45689a
  .password-eye-icon
    margin-top -1px
    width 12px
    height 14px
.login-form
  // overflow hidden
  min-height 360px
  // .fp-input
    // margin-bottom 20px
  .termes-label
    color register-policy-gray

  .login-social-icon
    clear both

.login-reg-modal
  background-color login-bg-gray

.background-transparent
   background transparent
   
.sign-in-btn
  background tila-blk
  width 100%
  color white
  border 0
  height 40px
  border-bottom-left-radius 16px
  &:focus
    outline none

.login-logo
  width 250px
  height 385px

.bg-FB-icon
  width 10px
  height 16px

.bg-GOOGLE-icon
  width 16px
  height 16px

.bg-social-icon
  width 58px
  height 58px

.or-tag-base
  top 50%
  border-radius 50%

.email-form
       min-height: 360px
.otp-expire
    color: border-gry-color;

.button-radius
    border-bottom-right-radius: 16px;

.cross-icon
     width: 16px;
     height: 16px;

    
.reset-password
  border: 1px solid white;
  background: white;
  padding: 20px;
  border-radius 10px
  min-height 355px
  .reset-main
   background light-brdr
   border-radius 2px
  .reset-password-icon
   width 73px
   height 71px
  .light-gray
    color dark-gray

.verify-email
    background-color: rgba(25, 197, 150, 0.08);
    border: 1px solid #19c596;
    .tickmark-icon
      width 16px
      height 16px
 .main-signin
  min-height 400px     
.complete-login
  min-height 430px
  .img-responsive
    width 32px
  .gender-select-main
    .gender-or
      width 24px
      height 24px
      border-radius 50%
      background popup-header
      color cam-lgt-gray
    a
      display flex
      flex-direction column
      .gender-select-inn
        width 64px
        height 64px
  .country-code
    position relative
    img
      width 20px
      
  .auto-suggestions-list
      max-height 135px
      overflow auto
      overflow-x hidden
      
  .country-dropdown
      border-bottom 1px solid light-border !important
      border-radius 0      

.otpInput
  outline none
  border-bottom 2px solid black

.success-text
  top 50%
  left 50%
  transform translate(-50%, -50%)
  width 30%

.city-toggle
  button
    width 100%

.mobile-input
  color light-gray-clr
  letter-spacing 2px
  
.logo-icon
  width 60px

@media screen and (min-device-width: 320px) and (max-device-width: 736px) and (orientation : portrait){
  .login-form {
    margin 20px 0 20px 0
    min-height auto

    .login-social-icon .bg-social-icon {
      width 45px
      height 45px
    }

    .social-icons {
      padding-top 10px
      justify-content center
    }
  }

  .sign-in-btn {
    font-size 16px
  }
}
