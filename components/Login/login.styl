@import '../../layout/main/executables.styl';

.image-placeholder
  min-height: 436px;
  background: #ccc;
  .img-responsive
    max-height 100%
    max-width 100%

.tickmark-part
  .tickmark-icon 
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: 50%
    width-height-radius(100px, 100px, 0)

.text-center
  text-align: center;

.forgot-password
  font-weight: bold;
  margin-left: 20px;
  margin-right: 20px;
  text-align: justify;
  .reset-link
    background-color: light-card-green;
    border: 1px solid generic-green-color;
    padding: 10px;
    font-size: large;
    display: flex;
    justify-content: space-between;
  .bg-light-gray
    color: dark-gray;
  .invalid-email
    background-color: #ffdacc;
    border: 1px solid thick-red-arrow;
    padding: 10px;
    font-size: large;

