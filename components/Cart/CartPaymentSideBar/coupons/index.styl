.listingColor
    border: solid 1px listing-border;
    background-color: listing-background-color;

.categoryColor
   border: solid 1.3px category-border;
   background-color: popup-header;

.bankColor
   border: solid 1.3px bank-border;
   background-color: bank-background-color;


.modalClassName
   position absolute
   top 10%

.applied 
   color: generic-green-color;
   
.buttonStyle
   left: 55%;
   bottom: 0%;
   height: 68%;
   position: absolute;
   border: 1px solid thick-blue;
   border-radius: 5px;

.wordBreak
   word-break: break-all;

.input
  width 350px !important
  height 60px
  border 0 !important


.border
  border-right: 1px dotted;
  margin-left: 25px;

.errorStyle {
    position: absolute;
    top: 15%
    left: 15%;
}

.apply-btn
    color #000
    border 1px solid #c8c7cc
    padding 10px 25px
    background-color #fff

.copy-btn
    color: navy-blue;
    border: 1px solid navy-blue;
    padding: 10px 25px;
    background-color: #fff;

.applyCouponMargin
   margin-top: 20%;

.loader-div
    width 50px
    height 50px
    position absolute
    z-index 14
    top 242px
    left 202px
  .loader-styl
    svg
      animation rotate 1.4s linear infinite;
      -webkit-animation rotate 1.4s linear infinite;
      -moz-animation rotate 1.4s linear infinite;
      @keyframes rotate {
        to {
          transform rotate(360deg);
        }
      }

      @-webkit-keyframes rotate {
        to {
          -webkit-transform rotate(360deg);
        }
      }

      @-moz-keyframes rotate {
        to {
          transform rotate(360deg);
        }
      }