@import '../../../../layout/main/executables.styl';

.applyCoupon {
    width: 100%;
    overflow: auto;
    align-items: center;
    max-height: 650px;
      .couponDiv {
        border: solid 0.9px border-color;
        min-height 170px;
        width: 350px;
        margin-top: 30px;
        box-shadow: 0 5px 9px 0 rgba(0, 0, 0, 0.05);
        border-radius: 5px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        }
        .couponMargin {
          margin: 2%;
          margin-right: 6%;
        }
}

.couponApply
    top 7%
    position absolute
    border-radius 2px
    box-shadow 0 3px 9px 0 rgba(0, 0, 0, 0.07)
    background-color white
    border-bottom 0
    display flex
    align-items center
    z-index 5
    left 9%

.couponCodeListing
    padding: 7px;
    width: 50%;
    margin-top: 10px;
    height: 33px;
    text-align: center;
    left: -10px;
    position: relative;
    border: solid 1px listing-border;
    background-color: listing-background-color;


.couponCodeListing:after {
    content: '';
    display: block;
    position: relative;
    left: -8px;
    width: 0;
    border-bottom: 10px solid listing-triangle-color;
    border-left: 10px solid transparent;
    top: 27%;
    transform: rotate(-90deg);
}

.couponCodeTerms {
    padding: 7px;
    width: 30%;
    height: 33px;
    text-align: center;
    left: -30px;
    position: relative;
    border: solid 1px listing-border;
    background-color: listing-background-color;
}

.couponCodeTerms:after {
    content: '';
    display: block;
