.sidebar-position
  position sticky !important
  top 80px

@media screen and (min-device-width: 320px) and (max-device-width: 766px) and (orientation : portrait){
  .cart-price-label {
    justify-content initial
    padding-left 16px
    font-size 16px
  }

  .cart-container .cart-box .quantity-title {
    padding 2px 0px
    margin 0 5px
    width 22px
  }

  .cart-stepper .plus, .cart-stepper .minus, .cart-stepper .minus-disable {
    width 16px
    height 16px
  }

  .cart-container .cart-box-btm {
    padding 14px 10px
  }
}

@media screen and (min-device-width: 768px) and (max-device-width: 1024px) and (orientation : portrait){
  .cart-container .cart-box .quantity-title {
    margin: 0px 5px;
    padding: 2px 5px;
  }

  .cart-stepper .plus, .cart-stepper .minus, .cart-stepper .minus-disable {
    width: 24px;
    height: 24px;
  }

  .cart-container .secure-img {
    height: 110px;
  }
}

@media screen and (min-device-width: 768px) and (max-device-width: 1024px) and (orientation : landscape){
  .price-stepper-part {
    flex-direction column

    .cart-stepper > div {
      justify-content start
    }
  }

  .cart-container {
    padding 20px 0
  }

  .cart-box {
    .landscape-cart-details {
      width 80%
    }
    .landscape-cart-price {
      width 20%
    }
  }

 }
