@import '../../layout/main/executables.styl';

.ff-t-i
  text-align center
  .e, .h-a-l
    width calc(50% - 30px)
    display inline-block
    padding 0px 35px
    border-radius 2px
    box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.04)
    background-color white
    padding-bottom 10px
    margin 7px
    .title
      font-family ProximaNova-SBold
      color tila-blk
      margin-bottom 17px
      display block
      text-align left
      margin 0px
      padding-top 7px
  .item
    // width 100px
    margin 0 auto
    padding 5px
    img
      width 100%
      height 100%
      margin 0 auto
    .slider-elips
      width 100%
      float left
      display inline-block

        
@media screen and (max-width 1280px) {
  .home-style-main {
    .ff-t-i {
      .e, .h-a-l {
          display block
          width calc(100% - 40px)
          margin auto
      }
    }
  }
}
