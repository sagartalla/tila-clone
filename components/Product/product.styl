@import '/static/vendor/css/slick.min.css';
@import '/static/vendor/css/slick-theme.min.css';
@import '../../layout/main/executables.styl';

.page-details-slider
  background-color #F1F2F4
  .details-right-part
    background-color rgba(255, 255, 255, 0.7)
    box-shadow 0 0 7px 0 rgba(225,225,225,0.5)
    position absolute
    z-index 99
    width 35%
    right 0
    .details-right-part-inn
      padding 35px 20px
      .ti-reviews-wrap
        span 
          &:nth-child(2)
            border-right 1px solid dottes-gry-clr
            border-left 1px solid dottes-gry-clr

      .checkout-instantly
        div
          flex 1
    .addto-cart
      background-color white
      padding 35px 20px

.display-item-wrap
  // margin-bottom 50px
.carousel-item-wrap 
  height 70px
  width: 100%;
  display: inline-block;
  border-radius 4px
  img
    max-height 100%
    max-width 100%
    margin 0 auto
    border-radius 4px
.selected-item-wrap
  display block
  height 730px;
  img
    height 100%
    margin 0 auto
.c-group-countainer
  display block
  margin 10px 0
  &:nth-child(even)
    background generic-gray-color

.added-to-cart
  background #20bd99
  color white  

.slick-slide
  width: 128px;

.product-details-main
  // background-color white
  // box-shadow: 0 0 4px 0 rgba(212,212,212,0.5)
  .expand-icon
    width 16px
    height 16px
  .sub-decryption
    overflow: hidden;
    line-height: 1.5em;
    max-height: 3em;

  .size-btn-main
    .size-btn
      display none
    label 
      cursor pointer;
      border 1px solid transparent;
      width-height-radius(30px, 30px, 50%)
      margin 0

  .size-btn-main input:checked + label {
    box-shadow: 0 0 3px 0 rgba(164,164,164,0.5);
  }

  .color-btn-main
    .color-btn
      display none
    label
      cursor pointer
      width-height-radius(20px, 20px, 50%)
      margin 0
    
    .pink
      background-color #cd4594

    .blue
      background-color #405CB3

    .green
      background-color #136B21

    .gray
      background-color lgt-gray

.bottom-slider
  background-color white
  padding 17px 0
  .copon-code
    border-left 5px solid  border-gry-color