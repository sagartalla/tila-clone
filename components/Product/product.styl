  text-align left;
  margin-bottom 30px;
.elt-description-column
  display inline-block
  width 32.33%;
  vertical-align top;
  margin-right 8px;
  text-align left;
  margin-bottom 20px;
.compare-main
  .compare-dtls
    .compare-dtls-img
      height 150px

.compare-main-items
  .compare-product-spficication
    height 74px
    .dispy-screen
      .screen-icon
        height 34px
        width 22px
      .camera-icon, .processor-icon
        width 30px
        height 30px
      .battery-icon
        height 35px
        width 24px
    &:nth-child(odd)
      background-color compare-bg-greay



.product-details-main .panel-group .panel-heading a[aria-expanded="false"]::after {
  right: 0;
  top: -4px;
  content: '\002b';
  position: absolute;
  font-size: 18px;
  font-weight: 300;
  color: #939393;
}

.product-details-main .panel-group .panel-heading a[aria-expanded="true"]::after {
  content: '\2212';
  position: absolute;
  right: 0;
  top: -4px;
  font-size: 18px;
  font-weight: 300;
  color: #939393;
}

.shipping-details-part
  background-color rgba(144, 144, 144, 0.2)
  border-top-left-radius 5px
  border-top-right-radius 5px

.free-delivery-part
  padding 2px
  .radio-btn-group
    border solid 0.5px dottes-gry-clr
    display inline-block
    margin 5px
    border-radius 4px
    display flex
    overflow hidden

    input[type=radio]
      position absolute
      visibility hidden
      display none

    label
      color label-light
      display inline-block
      cursor pointer
      font-weight bold
      padding 5px 10px
      display flex
      flex-direction column
      margin-bottom 0

    input[type=radio]:checked + label
      color label-light
      background cam-border-gray

    label + input[type=radio] + label
      border-left solid 0.5px dottes-gry-clr

 .space-between
    justify-content space-between
.review-block
  .review-textarea
    resize none
    border-radius  4px
    border solid 1px #d1d1d1
    background-color #ffffff
