  height:25px

@media screen and (min-device-width: 768px) and (max-device-width: 1024px) and (orientation : portrait){
  .details-right-part {
    position relative !important
    top auto !important
    width 100% !important
    right auto
    bottom auto
    height auto !important
    display flex
    background-color white !important

    .addto-cart {
      position relative !important
    }

    .ipad-details {
      width 50%
      float left
    }
  }

  .page-details-slider {
    height auto
  }

  .pdp-img-prt {
    padding-right 0

    .bottom-slider {
      background-color light-gray-color

      .sub-slider {
        height 55px
      }
    }
  }

  .ipad-delivery-address-part {
    margin-left 2px
    margin-top 2px
  }

  .footer-social-list-main-inn {
    border-right 0
  }

  .product-details-main, .ipad-delivery-address-part {
    border solid 0.2px #979797
    box-shadow none
    padding-bottom 1px
  }

  .pdp-img-prt {
    height auto
  }

  .page-details-slider .details-right-part .addto-cart {
    padding 20px 5px

    .buy-now-btn {
      padding 10px 35px
    }

    .add-to-card-btn {
      padding 10px 30px
    }
  }

}

@media screen and (min-device-width: 768px) and (max-device-width: 1024px) and (orientation : landscape){
  .page-details-slider .details-right-part .details-right-part-inn {
    padding 10px 5px

    .ipad-flex-wrp {
      flex-wrap wrap

      /*.pr-20 {
        padding-right 20px
      }*/
    }

    .checkout-instantly {
      .small-btn {
        padding 6px 15px
      }
    }

    .addto-cart {
      padding 20px 15px

      .add-to-card-btn {
        padding 10px
      }

      .buy-now-btn {
        padding 10px 40px
      }
    }
  }
}
