@import '/static/vendor/css/slick.min.css';
@import '/static/vendor/css/slick-theme.min.css';
@import '../../layout/main/executables.styl';

.pdp-wrap
  .pdp-bottom-ref-pixel
    position absolute
    width 0
    height 0
    bottom 0
    right 0
    position absolute
.page-details-slider
  background-color #F1F2F4
  height calc(100vh - 125px)

  .varient-select-part
    border: 1px solid rgba(0, 0, 0, 0.5)
    background-color: white
    border-radius: 4px
    -webkit-appearance: none
    -moz-appearance: none
    appearance: none
    padding: 5px 14px 5px 8px
    position relative
    &:focus
      outline none

  .details-pixel
    width 0
    height 0
    top 0
    right 0
    position absolute
  .details-right-part
    background-color rgba(255, 255, 255, 0.7)
    box-shadow 0 0 7px 0 rgba(225,225,225,0.5)
    // z-index 99
    width 35%
    right 0
    bottom 0
    top 0
    height calc(100vh - 103px)
    &.stateTop
      position absolute
      top 0
    &.stateMiddle
      position fixed
      top 61px
      z-index 1
    &.stateBottom
      position absolute
      bottom 0
      top auto
    .details-right-part-inn
      padding 10px 20px

      .product-price-bg
        border-radius 5px
        background-color rgba(144, 144, 144, 0.05)

      .ti-reviews-wrap
        span
          &:nth-child(2)
            border-right 1px solid dottes-gry-clr
            border-left 1px solid dottes-gry-clr

      .checkout-instantly
        div
          flex 1
    .addto-cart
      background-color white
      padding 10px 20px
      position absolute
      bottom 0
      left 0
      right 0
      .add-to-card-btn
        border-top-left-radius 20px
      .buy-now-btn
        border-bottom-right-radius 20px
        padding 10px 40px
    .buy-coupon
      width 16px
      height 16px

    .warrenty-part
      color rgba(0, 0, 0, 0.5)
      justify-content: space-around
      border: solid 0.5px rgba(151, 151, 151, 0.3)
      border-radius 4px
      .return-icon
        width 20px
      .secure-icon
        width 13px
        height 15px

    .pdp-deliver-list
      width 60%
      .auto-suggestions-wrap
        width 60%
        input
          font-size 12px
  .display-item-wrap
    height calc(100% - 45px)

.carousel-item-wrap
  height 70px !important
  width: 100%;
  display: inline-block;
  border-radius 4px
  img
    max-height 100%
    max-width 100%
    margin 0 auto
    border-radius 4px
.selected-item-wrap
  display block
  img
    height 100%
    margin 0 auto
    max-width 100%
    object-fit contain
.c-group-countainer
  display block
  margin 10px 0

.added-to-cart
  background #20bd99
  color white


.slick-slide
  width: 128px;

.product-details-main
  // background-color white
  // box-shadow: 0 0 4px 0 rgba(212,212,212,0.5)
  padding 10px 15px
  .expand-icon
    width 16px
    height 16px
  .sub-decryption
    overflow hidden
    line-height 1.5em
    max-height 3em

  .size-btn-main
    position relative
    &:after
      content ''
      position absolute
      background url(/static/img/icons/down-arrow/down-arrow.svg) no-repeat
      height 7px
      width 10px
      right 3px

    .size-btn
      display none
    label
      cursor pointer;
      border 1px solid transparent;
      // width-height-radius(30px, 30px, 50%)
      margin 0

  // .size-btn-main input:checked + label {
  //   box-shadow: 0 0 3px 0 rgba(164,164,164,0.5);
  // }

  .color-btn-main
    .color-btn
      display none
    label
      cursor pointer
      width-height-radius(20px, 20px, 50%)
      margin 0

    .pink
      background-color #cd4594

    .blue
      background-color #405CB3

    .green
      background-color #136B21

    .gray
      background-color lgt-gray

.bottom-slider
  background-color white
  padding 8px 0
  align-items center
  .copon-code
    border-left 5px solid  border-gry-color

.review-main
  .review-no
    font-size 90px
    background: url(/static/img/bg-img/groupstar.png) no-repeat;
    background-size contain
  .review-start
    .star-icon
      width 20px
      height 20px
      margin-right 5px
  .wrt-btn
    float left

.profile-img
  span
    width-height-radius(50px, 50px, 50%)
    background-color base-font

.review-start-inn
  .star-icon
    width 15px
    height 15px
    margin-right 5px

.recentview-main
  float left
  width 100%
  .recentview-main-inn
    width 100%
  .recentview-main-inn-img
    height 180px
    display flex
    align-items center
    justify-content center
  .recent-title
    background: rgba(216, 216, 216, 0.1)
    span
      border-left 4px solid border-pink

.elt-overview-main
  .overview-inn
    align-items flex-end

.elt-Specification-main
  .specification-icon
    width 30px
    height 45px

  .camera-icon
    width: 40px;
    height: 45px;

  .processor-icon
    width: 36px;
    height: 45px;

  .specification-review
    float left

.compare-main
  .compare-dtls
    .compare-dtls-img
      height 150px

.compare-main-items
  .compare-product-spficication
    height 74px
    .dispy-screen
      .screen-icon
        height 34px
        width 22px
      .camera-icon, .processor-icon
        width 30px
        height 30px
      .battery-icon
        height 35px
        width 24px
    &:nth-child(odd)
      background-color compare-bg-greay

@media screen and (min-device-width: 768px) and (max-device-width: 1024px) and (orientation : portrait){
  .details-right-part {
    position relative !important
    top auto !important
    width 100% !important
    right auto
    bottom auto
    height auto !important
    display flex
    background-color white !important

    .addto-cart {
      position relative !important
    }

    .ipad-details {
      width 50%
      float left
    }
  }

  .page-details-slider {
    height auto
  }

  .pdp-img-prt {
    padding-right 0

    .bottom-slider {
      background-color light-gray-color

      .sub-slider {
        height 70px
      }
    }
  }

  .ipad-delivery-address-part {
    margin-left 2px
    margin-top 2px
  }

  .footer-social-list-main-inn {
    border-right 0
  }

  .product-details-main, .ipad-delivery-address-part {
    border solid 0.2px #979797
    box-shadow none
    padding-bottom 1px
  }

  .pdp-img-prt {
    height auto
  }
}