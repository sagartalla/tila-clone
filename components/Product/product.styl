@import '../../layout/main/executables.styl';

.pdp-wrap
  .pdp-bottom-ref-pixel
    position absolute
    width 0
    height 0
    bottom 0
    right 0
    position absolute
.page-details-slider
  background-color #F1F2F4
  height calc(100vh - 125px)

  .varient-select-part
    border: 1px solid rgba(0, 0, 0, 0.5)
    background-color: white
    border-radius: 4px
    -webkit-appearance: none
    -moz-appearance: none
    appearance: none
    padding: 5px 14px 5px 8px
    position relative
    &:focus
      outline none

  .details-pixel
    width 0
    height 0
    top 0
    right 0
    position absolute
  .details-right-part
    background-color rgba(255, 255, 255, 0.7)
    box-shadow 0 0 7px 0 rgba(225,225,225,0.5)
    // z-index 99
    width 34%
    right 0
    bottom 0
    top 0
    height calc(100vh - 103px)
    &.stateTop
      position absolute
      top 0
    &.stateMiddle
      position fixed
      top 61px
      z-index 1
    &.stateBottom
      position absolute
      bottom 0
      top auto
    .details-right-part-inn
      padding 10px 20px

      .notify_me_btn
        background-color navy-blue
        border-bottom-right-radius 16px
        color white
      .product-price-bg
        border-radius 5px
        background-color rgba(144, 144, 144, 0.05)

      .ti-reviews-wrap
        span
          &:nth-child(2)
            border-right 1px solid dottes-gry-clr
            border-left 1px solid dottes-gry-clr

      .checkout-instantly
        div
          flex 1
    .addto-cart
      background-color white
      padding 20px 35px
      position absolute
      bottom 0
      left 0
      right 0
      .add-to-card-btn
        border-radius 0
        padding 10px 55px
        // border-top-left-radius 20px
        .added-cart-icon
          width 24px
          height 24px
          margin 0 35px
      .buy-now-btn
        border-radius 0
        border-bottom-right-radius 20px
        padding 10px 55px

    .buy-coupon
      width 16px
      height 16px

    .warrenty-part
      // color rgba(0, 0, 0, 0.5)
      // justify-content: space-around
      // border: solid 0.5px rgba(151, 151, 151, 0.3)
      // border-radius 4px
      .return-icon
        width 13px
      .secure-icon
        width 13px
        height 15px

      .trust-icon
        width 15px
        height 15px
      .radio-btn-group label
        padding 5px 13px

      .warenty-part-inn span
        color fashion-color

    .pdp-deliver-list
      // width 60%
      .auto-suggestions-wrap
        // width 60%
        input
          font-size 12px
  .display-item-wrap
    height calc(100% - 65px)

.warranty-modal
  width 65vh
  height 85vh
  margin-left 30px
  margin-right 30px
  ul li {
    list-style-type: disc
    font-size: 14px
    font-family ProximaNova-Light
  }

.carousel-item-wrap
  height 70px !important
  width: 100%;
  display: inline-block;
  border-radius 4px
  img
    max-height 100%
    max-width 100%
    margin 0 auto
    border-radius 4px
    object-fit scale-down
.selected-item-wrap
  display block
  padding-top 20px
  img
    height 100%
    margin 0 auto
    max-width 100%
    object-fit contain
.c-group-countainer
  display block
  margin 10px 0

.added-to-cart
  background #20bd99
  color white

.down-arrow
  position: relative;
  display: block;
  width: 10px;
  height: 10px;
  top: -4px;

.slick-slide
  width: 128px;

.product-details-main
  // background-color white
  // box-shadow: 0 0 4px 0 rgba(212,212,212,0.5)
  padding 10px 15px
  .expand-icon
    width 16px
    height 16px
  .sub-decryption
    overflow hidden
    line-height 1.5em
    max-height 3em

  .size-btn-main
    position relative
    &:after
      content ''
      position absolute
      background url(/static/img/icons/down-arrow/down-arrow.svg) no-repeat
      height 7px
      width 10px
      right 3px

    .size-btn
      display none
    label
      cursor pointer;
      border 1px solid transparent;
      // width-height-radius(30px, 30px, 50%)
      margin 0

  // .size-btn-main input:checked + label {
  //   box-shadow: 0 0 3px 0 rgba(164,164,164,0.5);
  // }

  .color-btn-main
    .color-btn
      display none
    label
      cursor pointer
      width-height-radius(20px, 20px, 50%)
      margin 0

    .pink
      background-color #cd4594

    .blue
      background-color #405CB3

    .green
      background-color #136B21

    .gray
      background-color lgt-gray

.bottom-slider
  background-color white
  padding 8px 0
  align-items center
  margin 0 auto
  border-top-right-radius 4px
  border-top-left-radius 4px
  .copon-code
    border-left 5px solid  border-gry-color

.review-main
  .review-no
    font-size 90px
    background: url(/static/img/bg-img/groupstar.png) no-repeat;
    background-size contain
  .review-start
    .star-icon
      width 20px
      height 20px
      margin-right 5px
      &:hover
        cursor pointer
    .product-box
       width 30px
       height 20px
  .wrt-btn
    float left

.profile-img
  span
    width-height-radius(50px, 50px, 50%)
    background-color base-font

.review-start-inn
  .star-icon
    width 15px
    height 15px
    margin-right 5px

.recentview-main
  float left
  width 100%
  .recentview-main-inn
    width 100%
  .recentview-main-inn-img
    height 180px
    display flex
    align-items center
    justify-content center
    img
      object-fit scale-down
  .recent-title
    background: rgba(216, 216, 216, 0.1)
    span
      border-left 4px solid border-pink

.elt-overview-main
  .overview-inn
    align-items flex-end

.elt-Specification-main
  .specification-icon
    width 30px
    height 45px

  .camera-icon
    width: 40px;
    height: 45px;

  .processor-icon
    width: 36px;
    height: 45px;

  .specification-review
    float left
