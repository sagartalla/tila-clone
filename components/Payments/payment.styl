@import '../../layout/main/main.styl';

.payment
  background-color body-color
  min-height 100vh

  small
    font-size font-size-10
  .payment-header
    font-size 20px

  .pay-menu
    background-color #f1f1f1
    li
     list-style none
     padding 10px 25px
    .active
      background-color white
      box-shadow -4px 0 8px #ccc

  .right-bar
    font-size font-size-14
    .offer
      background-color black
      color white
      border-radius 4px 4px 0 0
    .up-selling
      background-color light-gray-color
      padding 5px 10px
    ul
      li
        list-style none
        margin-bottom px-5
        span
          float right
