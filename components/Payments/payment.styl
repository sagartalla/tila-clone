@import '../../layout/main/executables.styl';

.payment
  background-color body-color
  min-height 100vh

  .sign-part
    width 70%
    input[type='text']
      width 100%

  .social-icons-list
    position relative

    .sub-title
      position absolute
      right -13px
      border-radius 50%
      top 40%;
      border 1px solid lht-bdr

  small
    font-size font-size-10

  .pay-menu
    background-color #f9f9f9
    li
      list-style none
      padding 15px 20px
      color black
      cursor pointer
    .active
      background-color white
      box-shadow -4px 0 8px rgba(204, 204, 204, 0.8)
      border-right 5px solid #45689a
      color black-color

  .right-bar
    font-size font-size-14
    .offer
      background-color black
      color white
      border-radius 4px 4px 0 0
    .up-selling
      background-color light-gray-color
      padding 5px 10px
    ul
      li
        list-style none
        margin-bottom px-5
        span
          float right

  .payment-summary
    .right-bar
      ul h5
        margin-top 0

  .profile
  .map-address
  .payment-icon
    position absolute
    left -20px
    width-height-radius(40px, 40px, 0)
    // & .done
    //     .icon-bg-fill
    //       fill generic-green-color

  .default-logo
    width: 74px;
    height: 34px;

  .secure-img
    display: flex;
    padding: 20px 40px;
    box-sizing: border-box;
    width: 100%;
    height: 80px;
    img
      width 100%

  .payment-lists
    .make-paymrnt-icon
      width: 24px;
      height: 17px;

  .pay-loyalty-main
    .pay-loyalty-inn
      width 65%
      .pay-loyalty
        height: 70px;
        width: 80px;
        border-radius: 8px;
        border: solid 0.8px generic-gray-color;

  .pay-offers-discounts
    table
      th
        background-color #f9fbfd
        font-size: 12px
        color base-font
        padding: 5px 5px 5px 20px;
      td
        border-right solid 2px cam-border-gray
        font-size: 12px
        color base-font
        padding: 5px 5px 5px 20px;

    .offers-show-part
      .title
        border-bottom: 1px dashed rgba(44, 47, 51, 0.2)
      .pay-cart-icon
        width: 36px;
        height: 24px;
      .debit-cards-list
        border-bottom: 1px dashed rgba(44, 47, 51, 0.2)
        .or-part
          width 22px
          height 22px
          border-radius 22px
          border 1px solid rgba(44, 47, 51, 0.2)
          bottom: -11px;
          background-color: white;

      .credit-cards-list
        .or-part
          left 49%

  .offers-bottom
    box-shadow: 0 -4px 5px 0 rgba(0, 0, 0, 0.02);
        
        

  .netbanking-part
    .pay-loyalty-inn
      .pay-loyalty
        width: 89px
        height: 70px
        border-radius: 7px
        border: solid 0.8px generic-gray-color

  .cash-on-dly-points
    .refresh-part
      .refresh-part-inn
        box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.12);
        border-radius: 4px;
        .refresh-icon
          width 17px
          height 17px
    .captcha-icon-part
      span
        padding 5px
        border 1px dotted generic-gray-color
        border-radius 7px
        margin-right 15px
      .captcha-icon
        width: 47px;
        height: 43px;

      .car-icon
        width 30px
        height 30px

    .captch-inn
      border-bottom-left-radius: 4px;
      border-bottom-right-radius: 4px;
      box-shadow: 0 3px 3px 0 rgba(0, 0, 0, 0.07);
      border: solid 0.5px navy-blue;

    .cash-tab
      li
        width: 40%;
        font-weight: 600;
        cursor: pointer;
        color: navy-blue;
        border: 1px solid navy-blue;
        padding: 10px;
        text-align: center;
        border-bottom: 0;
        background: white;
        margin-bottom: -1px;
        z-index: 9;
        position: relative;
        border-top-right-radius: 4px;
        border-top-left-radius: 4px;
        border-top: 4px solid navy-blue;

  .drop-box-icon
    width: 118px;
    height: 99px;

.img-responsive
  max-width 100%
  max-height 100%
