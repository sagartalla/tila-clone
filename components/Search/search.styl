@import '../../layout/main/executables.styl';

.filter-panel
  width: 215px;
  border: 1px solid #e5e5e5;
  box-shadow: 0 2px 7px 0 rgba(0,0,0,0.03);
  overflow: scroll;
  max-height: calc(100vh - 150px);
  position: sticky !important;
  top: 120px;
  .bottom-absolute
    position absolute
    bottom 0
  li
    list-style none

.search-main-part
  min-height 500px

.search-main-part .product-items-main:nth-child(4) {
  margin-right 0
}

.search-results
  width calc(82% - 20px)
  padding 0 0 0 10px
  .no-search
    width 300px
    text-align center
    margin auto
  .no-results
    text-align center
  .caption
    background white
  .product-items-main
    width 25%
    padding-bottom 4px
    border-right 1px solid light-brdr
    a
      text-decoration none
      position relative
      float left
      width 100%
    .loader-div
       width 20px
       height 20px
       position absolute
       z-index 14
       left 120px
       bottom -49px
      .loader-styl
        width 40px
        height 40px
        svg
          animation rotate 1.4s linear infinite;
          -webkit-animation rotate 1.4s linear infinite;
          -moz-animation rotate 1.4s linear infinite;
          @keyframes rotate {
            to {
              transform rotate(360deg);
            }
          }

          @-webkit-keyframes rotate {
            to {
              -webkit-transform rotate(360deg);
            }
          }

          @-moz-keyframes rotate {
            to {
              transform rotate(360deg);
            }
          }
    &.active-product
      .product-showsizeDisplay
        visibility visible
        margin-bottom 0
      .desc-cont
        display none

    .product-sizeDisplay
        z-index 3
        width 100%
        max-width 100%
        position absolute
        bottom 0px
        background #ffffff
        visibility hidden
        margin-bottom -15px
        webkit-transition all 0.2s ease-out
        transition all 0.2s ease-out
        .product-displayHeader
          padding 8px
          text-align left
          color #535766
          padding-left 10px
        .product-sizeContainer
          padding 8px 10px 10px
          overflow-y auto
          max-height 118px
          box-sizing border-box
          .product-sizebutton
            border-radius 20px
            margin 5px
            min-width 34px
            min-height 34px
            background-color #ffffff
            border 1px solid #BFC0C6
            padding 8px
            display inline-block
            outline none
            text-align center
          .product-strikebutton
            border-radius 20px
            margin 5px
            min-width 34px
            min-height 34px
            background-color #ffffff
            border 1px solid #BFC0C6
            padding 8px
            display inline-block
            text-align center
            outline none
            background-color #f7f6f6
            pointer-events none
            position relative
            &::after
              content ''
              display block
              border-top 1px solid #000
              width 100%
              height 100%
              position absolute
              left 2%
              top 50%
              transform rotateZ(-45deg)
              transform-origin top
  .hover-show-date
    display none
    z-index 9
    background-color white
    left 0
    border-radius 12px
    // bottom -20%

    &.active-product,&.display-buttons
        display block
        z-index 9
        // transform scale(1.1)
        // padding 4px
        border-bottom-left-radius 14px
        border-bottom-right-radius: 14px
        background-color white
        // box-shadow 0 2px 10px 0 rgba(0, 0, 0, 0.1)
        z-index 11
        position absolute
        width 100%

    .quick-view
      // background-color label-light
      // padding 10px 0
      width 96%
      margin 0 auto
      .add-to-crt
        border: 1px solid tila-blk
        border-bottom-left-radius: 14px
        background-color white
        color tila-blk
        width 50%
        height 35px
        .cart-list
          margin-right 8px
        i
          width: 13px
          height: 11px
          margin-right: 5px
          color tila-blk
      .buy-now-btn
        border-bottom-right-radius 16px
        color white
        width 50%
        height 35px
        i
          width: 18px
          height: 14px
          margin-right: 5px
        .cart-list
          height 20px
          width 20px
          margin-right 5px
      a
        // color white
        width 50%
        text-align center
        padding 6px 0 6px 15px
        align-items flex-end
        .cart-list
          width 14px
          height 16px
        // &:first-child
        //   border-right 1px solid white

    .brand-price-details
      padding 0 10px

      .prdt-name
        line-height 19px
      .star-raing
        width 17px
        height 16px
        margin-right 2px

    .wish-list-part
      margin 10px 8px
      .wish-list
        width 15px
        height 15px
      .add-to-compare
        input[type="checkbox"]
          margin-right 8px
        input[type="checkbox"]:checked + label:after
          width 10px
          height 6px
          top 3px
        label:before
          width 15px
          height 15px
          top 0px

  .items-list-show
    width: 1100px;
    align-items center
    .search-val-part
      width 45%
    .sple-check-prt
      border-left 1px solid lht-bdr
    .deliver-to-main
      width 55%
      justify-content flex-end
      align-items center
      .sort-part-inn
        display flex
        border-left 1px solid light-brdr
        .sort-arrow
          width 12px
          height 12px

        .select-mn
          position relative
          .sort-drop-down
            left auto
            right 0
            border-radius inherit
            box-shadow 0 0 5px rgba(0,0,0,0.1)
            transition all 0.5s ease-in
            list-style none
            // opacity 0
            right 0
            border 0
            &:before
              content: ""
              width 0
              height 0
              position absolute
              bottom 100%
              right 15px
              border-width 0 6px 6px 6px
              border-style solid
              border-color white transparent


          .select-text
            border 0
            background-color transparent
            position relative
            // &:after
            //   content ''
            //   position absolute


        .select-mn .select-text:focus
          outline none

  .suggested-tags-main
    .suggest-sublist
      span
        padding 5px 14px
        background suggest-label-gray
        border-radius 20px
        margin-left 10px

    .sugest-tag
      border-left 1px solid light-brdr

  .delivery-part
    .map-icon
      width 10px
      height 16px

  .applied-tags
    .applied-tags-i
      max-width 70%
    .applied-tags-inn
      background linear-gradient(to left, gray-light, white)
      border-radius: 15px
      margin 5px
      border 0.5px solid rgba(192, 192, 192, 0.3)
      .title
        padding 0px 10px
      .close-part
        cursor pointer
        padding 2px 10px
        box-sizing border-box
        border-left 0.5px solid rgba(192, 192, 192, 0.3)
