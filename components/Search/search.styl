@import '/static/vendor/css/react-input-range.css';
@import '/static/vendor/css/react-input-range-override.css';
@import '../../layout/main/executables.styl';

.filter-panel
  float left
  width 17%
  margin-right 20px
  border 1px solid border-gray
  box-shadow 0 2px 7px 0 rgba(0,0,0,0.03)
  position sticky
  top 65px;
  li
    list-style none

.search-main-part
  min-height 530px

.search-results
  float left
  width calc(82% - 20px)
  .no-search
    width 300px
    text-align center
    margin auto
  .no-results
    text-align center
  .caption
    background white
  .product-items-main
    width 276px
    padding-bottom 20px
    margin-right 1px
    .loader-div
       width 20px
       height 20px
       position absolute
       z-index 14
       left 120px
       bottom -49px
      .loader-styl
        width 40px
        height 40px
        svg
          animation rotate 1.4s linear infinite;
          -webkit-animation rotate 1.4s linear infinite;
          -moz-animation rotate 1.4s linear infinite;
          @keyframes rotate {
            to {
              transform rotate(360deg);
            }
          }

          @-webkit-keyframes rotate {
            to {
              -webkit-transform rotate(360deg);
            }
          }

          @-moz-keyframes rotate {
            to {
              transform rotate(360deg);
            }
          }
    &.active-product
      .product-showsizeDisplay
        visibility visible
        margin-bottom 0
      .desc-cont
        display none

    .product-sizeDisplay
        z-index 3
        width 100%
        max-width 100%
        position absolute
        bottom 0px
        background #ffffff
        visibility hidden
        margin-bottom -15px
        webkit-transition all 0.2s ease-out
        transition all 0.2s ease-out
        .product-displayHeader
          padding 8px
          text-align left
          color #535766
          padding-left 10px
        .product-sizeContainer
          padding 8px 10px 10px
          overflow-y auto
          max-height 118px
          box-sizing border-box
          .product-sizebutton
            border-radius 20px
            margin 5px
            min-width 34px
            min-height 34px
            background-color #ffffff
            border 1px solid #BFC0C6
            padding 8px
            display inline-block
            outline none
            text-align center
          .product-strikebutton
            border-radius 20px
            margin 5px
            min-width 34px
            min-height 34px
            background-color #ffffff
            border 1px solid #BFC0C6
            padding 8px
            display inline-block
            text-align center
            outline none
            background-color #f7f6f6
            pointer-events none
            position relative
            &::after
              content ''
              display block
              border-top 1px solid #000
              width 100%
              height 100%
              position absolute
              left 2%
              top 50%
              transform rotateZ(-45deg)
              transform-origin top
  .hover-show-date
    display none
    z-index 9
    background-color white
    left 0
    border-radius 12px
    // bottom -20%
    &.active-product,&.display-buttons
        display block
        z-index 9
        // transform scale(1.1)
        // padding 4px
        border-bottom-left-radius 10px
        border-bottom-right-radius: 10px
        background-color white
        box-shadow 0 2px 10px 0 rgba(0, 0, 0, 0.1)
        z-index 11
        position absolute
        width 276px

    .quick-view
      // background-color label-light
      // padding 10px 0
      width 96%
      margin 0 auto
      .add-to-crt
        border: 1px solid navy-blue
        border-bottom-left-radius: 16px
        color navy-blue
        .cart-list
          margin-right 8px
      .buy-now-btn
        background-color navy-blue
        border-bottom-right-radius 16px
        color white
        padding-left 14px
        .cart-list
          height 20px
          width 20px
          margin-right 5px
      a
        // color white
        width 50%
        text-align center
        padding 6px 0 6px 15px
        align-items flex-end
        .cart-list
          width 14px
          height 16px
        // &:first-child
        //   border-right 1px solid white

    .brand-price-details
      padding 0 10px

      .prdt-name
        line-height 19px
      .star-raing
        width 17px
        height 16px
        margin-right 2px

    .wish-list-part
      margin 10px 8px
      // border-bottom: 1px solid cam-border-gray
      // padding-bottom: 10px;
      .wish-list
        width 15px
        height 15px

  .items-list-show
    align-items flex-end
    .deliver-to-main
      width 50%
      .delovery-inn
        width 60%
      .sort-part-inn
        width 50%
        label
          width 40%

  .suggested-tags-main
    .suggest-sublist
      span
        padding 5px 14px
        background suggest-label-gray
        border-radius 20px
        margin-left 10px

    .sugest-tag
      border-left 1px solid border-gray

  .delivery-part
    .map-icon
      width 10px
      height 16px

  .applied-tags
    justify-content space-between
    .applied-tags-inn
      background: linear-gradient(to left, gray-light, white)
      border-radius: 15px
      margin 5px
      border: 0.5px solid rgba(192, 192, 192, 0.3)
      .title
        padding: 0px 10px
      .close-part
        cursor pointer
        padding: 2px 10px
        box-sizing: border-box
        border-left: 0.5px solid rgba(192, 192, 192, 0.3)
.justify-spacebetween
  justify-content space-between
.product-items
  // transform: scale(1)
  transition: all .5s ease
  position relative
  // padding 4px
  // width 100%
  // transition: width 2s;
  .desc-cont
    .prdt-name
      width 100%

  .fullfilled-label
      display none

  .full-and-globe-main
    position absolute
    top 0
    right 0
  .fullfill-main
    // position absolute
    // top 5px
    // right 10px
    padding: 6px 10px;
    border-bottom-left-radius 20px
    // border-top-right-radius 12px
    &:hover
      background-color rgba(216,216,216,0.8)
      .fullfilled-label
        display block
      .fulfill-img
        background-color transparent

    .fulfill-img
      background url(/static/img/icons/common-icon/icon-fullfilled.svg) no-repeat center
      width 30px
      height 30px
      border-radius 50%
      background-color rgba(216,216,216,0.8)
      display inline-flex
      background-position center
      
        // position absolute
    .fullfilled-label
      color rgba(0, 0, 0, 0.5)

  &:hover
    z-index 9
    // transform scale(1.1)
    // padding 4px
    border-bottom-left-radius 10px
    border-bottom-right-radius: 10px
    background-color white
    box-shadow 0 2px 10px 0 rgba(0, 0, 0, 0.1)
    z-index 11
    position absolute
    width 276px

    .fullfill-main
      // background-color: rgba(216, 216, 216, 0.8)
    // .fullfilled-label
    //   display block
    .image-div
      border-top-left-radius 12px
      border-top-right-radius 12px
      border-radius 10px
      // border solid 1px border-light-gray
    .desc-cont
      display none
    .hover-show-date
      display block
  .discount-main
    position absolute
    top 0
    left 0
    padding 7px 18px
.category-sub-list-inn
  .select-check-mate
    display flex
    width 100%
    .category-label
      display flex
      width 88%
      .category-span
        overflow hidden
        white-space nowrap
        o-text-overflow ellipsis
        text-overflow ellipsis
        width 80%

.quick-view
  .add-loader
    align-items center
    justify-content center
    .loader-div
      position relative
      z-index initial
      left auto
      bottom auto


.search-results .hover-show-date .quick-view .add-loader
  padding: 6px 0 6px 0px;

.loader
  position absolute
  bottom 0

.grid-cont .product-items:nth-child(4n) .img-count
  border-right 0

.grid-cont
  // overflow hidden
  position relative
  // border 1px solid border-gray
  box-shadow 0 2px 7px 0 rgba(0,0,0,0.03)
  background-color white
  border-radius 10px

  .img-cont
    height 398px
    display flex
    align-items center
    justify-content center
    width 100%
    .tag-main
      background url(/static/img/icons/common-icon/tag-icon.svg) no-repeat
      width 22px
      height 22px
      top 20px
      left 20px
      // position absolute
    .offer-tag
      // position: absolute;
      top: 0
      left: 0
      padding: 6px 10px;
      border-bottom-right-radius 26px
      border-top-left-radius 10px
      color white
      // .down-arrow
      //   width 0
      //   height 0
      //   border-left 10px solid transparent
      //   border-right 10px solid transparent
      //   // border-top: 10px solid red;
      //   // position absolute
      //   top -16px
      &.green
        background generic-green-color
      &.yellow
        background yellow-color
      &.orange
        background orange
      &.red
        background thick-red-arrow
    .variants-main
      width-height-radius(35px, 35px, 50%)
      bottom 10px
      left 10px
      padding 8px
      position absolute
      background rgba(255, 255, 255, 0.5) url(/static/img/icons/common-icon/variants.svg) no-repeat center

    .image-div
      width 100%
      height 100%
      overflow hidden
      display flex
      justify-content center
      align-items center
      img
        max-height 100%
        max-width 100%
        object-fit scale-down

.category-list
  // border-bottom 0.5px solid border-gray
  // padding-bottom 10px

  .category-list-title
    border-bottom 0.5px solid border-gray
    a
      display flex
      justify-content space-between
      width 100%
      font-size 13px
      align-items center
      .expand-icon
        width 16px
        height 16px

.category-sub-list
  // padding 10px 0 0 20px

  .main-sub-list > a
    color black
    font-family ProximaNova-Bold
    font-size 12px

.category-sub-list-inn a
  color-fontsize-fontW(black, 12px, ProximaNova-Light)
  &:hover
    font-weight 600

.range-select-part
  display flex
  justify-content space-between
  align-items center

.price-select-list
  width 50%
  border 0
  background transparent
  border-bottom 1px solid light-gray
  border-radius 0
  -webkit-appearance none
  -moz-appearance none
  &:focus
    outline none

.spell-strip
  background #fffaee
  padding 5px 15px
  border 1px solid #ffc600
  border-radius 4px

@media screen and (min-device-width: 768px) and (max-device-width: 1024px) and (orientation : portrait){
  .filter-panel {
    width 24%
  }

  .search-results {
    width calc(76% - 20px)

    .product-items-main {
      width 250px
    }

    .items-list-show {
      align-items flex-start
    }

    .deliver-to-main {
      width 100% !important
    }

    .product-items:hover {
      width 265px
    }

  }
}

