# Default server configuration
#
server {
	listen 3002 default_server;
	listen [::]:3002 ipv6only=on default_server;

	# SSL configuration
	#
	# listen 443 ssl default_server;
	# listen [::]:443 ssl default_server;
	#
	# Note: You should disable gzip for SSL traffic.
	# See: https://bugs.debian.org/773332
	#
	# Read up on ssl_ciphers to ensure a secure configuration.
	# See: https://bugs.debian.org/765782
	#
	# Self signed certs generated by the ssl-cert package
	# Don't use them in a production server!
	#
	# include snippets/snakeoil.conf;

	location / {
    proxy_pass http://127.0.0.1:3000;
    proxy_connect_timeout       600s;
    proxy_send_timeout          600s;
    proxy_read_timeout          600s;
    send_timeout                600s;
  }

	location /apple-app-site-association {
		root /var/www/ios;
		index apple-app-site-association;
		default_type application/json;
	}

	location /en/robot.txt {
		root /var/www/tila;
		index robot.txt;
		default_type application/text;
	}

	location /ar/robot.txt {
		root /var/www/tila;
		index robot.txt;
		default_type application/text;
	}

}

server {
  listen 80;
  server_name help.tila.com;
  location / {
    proxy_pass       http://127.0.0.1:3000/en/help/faq;
    proxy_set_header Host            help.tila.com;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_connect_timeout       600s;
    proxy_send_timeout          600s;
    proxy_read_timeout          600s;
    send_timeout                600s;
  }
	location /en {
    proxy_pass       http://127.0.0.1:3000/en/help/faq;
    proxy_set_header Host            help.tila.com;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_connect_timeout       600s;
    proxy_send_timeout          600s;
    proxy_read_timeout          600s;
    send_timeout                600s;
  }
	location /ar {
    proxy_pass       http://127.0.0.1:3000/en/help/faq;
    proxy_set_header Host            help.tila.com;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_connect_timeout       600s;
    proxy_send_timeout          600s;
    proxy_read_timeout          600s;
    send_timeout                600s;
  }
}
